<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="ratio ratio-16x9">
                <img src="<%= imgUrl %>" class="card-img-top" alt="">
            </div>
            <div class="card-body">
                <h3 class="card-title"><%= campground.name %></h3>
                <div class="card-text"><small class="text-muted"><%= campground.province %></small></div>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">Number of campsites: <%= campground.sites %></li>
                <li class="list-group-item">Phone Number: <%= campground.phone %></li>
            </ul>
            <div class="card-body">
                <h5 class="card-text">Amenities</h5>
            </div>
            <ul class="list-group list-group-flush">
                <% for (let amen of amenList) { %>
                <li class="list-group-item"><%= amen %></li>
                <% } %>
            </ul>

            <% if (campground.desc) { %>
            <div class="card-body">
                <p class="card-text"><%= campground.desc %></p>
            </div>
            <% } %>

            <div class="card-body">
                <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit" class="card-link">Edit this campground</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h4 class="mt-3">Leave a Review for this Campground</h4>
        <div class="mb-3">
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="validated-form" novalidate>
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" required></textarea>
                <button class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
        <% for(let review of campground.reviews) { %>
        <div class="card mb-2">
            <div class="card-body">
                <h5 class="card-title">
                    <% for (let i = 0; i < review.rating; i++) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                    </svg>
                    <% } %>
                </h5>
                <p class="card-text"><%= review.body %></p>
                <form action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
    </div>
</div>