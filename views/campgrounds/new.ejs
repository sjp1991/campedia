<% layout('layouts/boilerplate') %>
<h1 class="text-center">Add a new Campground</h1>
<form action="/campgrounds" method="POST">
    <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="campground[name]">
    </div>
    <div class="mb-3">
        <label class="form-label" for="province">Province</label>
        <select class="form-select" id="province" name="campground[province]">
            <option value="">-- Choose a province --</option>
            <% for(let province of provinces){ %>
            <option value="<%=province%>"><%=province%></option>
            <% } %>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" for="sites">Number of Sites</label>
        <input class="form-control" type="number" id="sites" name="campground[sites]">
    </div>
    <div class="mb-3">
        <label class="form-label" for="phone">Phone Number</label>
        <input class="form-control" type="text" id="phone" name="campground[phone]">
    </div>
    <div class="mb-3">
        <label class="form-label" for="amen">Amenities</label>
        <select class="form-select" id="amen" name="campground[amen]" multiple>
            <% for(let amen of amenitiesMap){ %>
            <option value="<%=amen[0]%>"><%=amen[1]%></option>
            <% } %>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" for="desc">Description</label>
        <input class="form-control" type="text" id="desc" name="campground[desc]" value="">
    </div>
    <button class="btn btn-primary">Submit</button>
    <a class="btn btn-danger" href="/campgrounds">Cancel</a>
</form>