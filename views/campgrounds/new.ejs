<% layout('layouts/boilerplate') %>
<h1>Add a new Campground</h1>
<form action="/campgrounds" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="campground[name]">
    </div>
    <div>
        <label for="province">Province</label>
        <select id="province" name="campground[province]">
            <option value="">-- Choose a province --</option>
            <% for(let province of provinces){ %>
            <option value="<%=province%>"><%=province%></option>
            <% } %>
        </select>
    </div>
    <div>
        <label for="sites">Number of Sites</label>
        <input type="number" id="sites" name="campground[sites]">
    </div>
    <div>
        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="campground[phone]">
    </div>
    <div>
        <label for="amen">Amenities</label>
        <select id="amen" name="campground[amen]" multiple>
            <% for(let amen of amenitiesMap){ %>
            <option value="<%=amen[0]%>"><%=amen[1]%></option>
            <% } %>
        </select>
    </div>
    <button>Submit</button>
</form>